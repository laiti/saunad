{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2022",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./source",
    "outDir": "./compiled",
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [ "./source/**/*" ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "types": [
    "node",
    "jest"
  ]
}
